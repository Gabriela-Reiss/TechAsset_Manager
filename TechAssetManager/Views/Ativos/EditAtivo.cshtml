@model TechAssetManager.Models.Ativo;
@{
    ViewBag.Title = "Editar Ativo";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="p-4" style="border: 1px solid #000; border-radius: 10px; width: 400px;">

        <h1 class="text-center mb-1">Editar Ativo</h1>
        <p class="text-center text-muted mb-3">
            Edite os campos
        </p>

        <form asp-action="EditAtivo">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" type="text" class="form-control" placeholder="Insira o nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NumeroSerie" class="control-label"></label>
                <input asp-for="NumeroSerie" type="text" class="form-control" placeholder="Informe o número de série" />
                <span asp-validation-for="NumeroSerie" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataAquisicao" class="control-label"></label>
                <input asp-for="DataAquisicao"
                       type="datetime-local"
                       class="form-control" />
                <span asp-validation-for="DataAquisicao" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" type="number" class="form-control" placeholder="Informe o valor" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="CategoriaId"></label>
                <select asp-for="CategoriaId"
                        asp-items="ViewBag.Categorias"
                        class="form-control">
                    <option value="">Selecione</option>
                </select>
            </div>



            <div class="d-flex justify-content-center gap-2">
                <input type="submit"
                       value="Salvar"
                       class="btn"
                       style="
               background-color:#1e3a8a;
               color:white;
               font-weight:500;
               padding:8px 18px;
               border-radius:6px;" />

                <a asp-action="ListagemAtivos"
                   class="btn"
                   style="
           background-color:#93c5fd;
           color:#1e293b;
           font-weight:500;
           padding:8px 18px;
           border-radius:6px;">
                    Voltar
                </a>
            </div>
        </form>

    </div>
</div>

